<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3
                              https://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>fat</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <!-- Include compiled project classes -->
  <fileSets>
    <fileSet>
      <directory>${project.build.outputDirectory}</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
      <excludes>
        <!-- avoid bundling signatures -->
        <exclude>META-INF/*.SF</exclude>
        <exclude>META-INF/*.DSA</exclude>
        <exclude>META-INF/*.RSA</exclude>
      </excludes>
    </fileSet>
  </fileSets>

  <dependencySets>
    <!-- unpack compile/runtime deps -->
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <scope>compile</scope>
      <excludes>
        <exclude>org.openjfx:*:*</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <scope>runtime</scope>
      <excludes>
        <exclude>org.openjfx:*:*</exclude>
      </excludes>
    </dependencySet>

    <!-- explicitly include selected provided deps -->
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <scope>provided</scope>
      <includes>
        <include>org.apache.groovy:groovy</include>
        <include>org.apache.ivy:ivy</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
